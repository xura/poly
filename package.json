{
  "name": "poly",
  "version": "0.0.1",
  "author": "Joe Badaczewski @joe307bad",
  "package": "CLI tool for managing polyrepos",
  "bin": {
    "poly": "./bin/run"
  },
  "bugs": "https://github.com/xura/poly/issues",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-help": "^2",
    "tslib": "^1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@types/chai": "^4",
    "@types/mocha": "^5",
    "@types/node": "^10",
    "chai": "^4",
    "chalk": "^4.0.0",
    "eslint": "^5.13",
    "eslint-config-oclif": "^3.1",
    "eslint-config-oclif-typescript": "^0.1",
    "fp-ts": "^2.5.3",
    "globby": "^10",
    "io-ts": "^2.2.0",
    "io-ts-reporters": "^1.0.0",
    "mocha": "^5",
    "nyc": "^14",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8",
    "tsyringe": "^4.1.0",
    "typescript": "^3.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/xura/poly",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "poly",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "hooks": {
      "init": "./lib/hooks/init/init"
    },
    "topics": {
      "run": {
        "description": "Run project(s)"
      }
    }
  },
  "repository": "xura/poly",
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "eslint . --ext .ts --config .eslintrc",
    "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md"
  },
  "types": "lib/index.d.ts"
}
